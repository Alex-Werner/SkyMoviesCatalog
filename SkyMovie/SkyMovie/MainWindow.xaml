<Window x:Class="SkyMovie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SkyMovie by Skyline-Creation" Height="800" Width="1024">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/SkyMovie;component/Images/bg.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Left" Height="727" Margin="10,32,0,0" VerticalAlignment="Top" Width="177"/>
        <TabControl Margin="192,0,0,0">
            <TabControl.Background>
                <SolidColorBrush Color="#FFF9F9F9" Opacity="0.2"/>
            </TabControl.Background>
            <TabItem Header="Cheese" Background="Beige">
                <Grid Opacity="1">
                </Grid>
            </TabItem>
            <TabItem Header="Pepperoni">
                The Pepperoni Tab
            </TabItem>
            <TabItem Header="Mushrooms">
                The Mushrooms Tab
            </TabItem>
        </TabControl>

    </Grid>
</Window>
