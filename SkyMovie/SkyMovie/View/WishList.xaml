                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Commentaire" Binding="{Binding Path=Observation}" Width="*" CanUserResize="True"></DataGridTextColumn>
                -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
